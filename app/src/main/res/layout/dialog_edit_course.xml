<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Edit Course"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Image Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Course Image"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- ImageView to display selected image -->
        <ImageView
            android:id="@+id/ivEditImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/image_border"
            android:scaleType="centerCrop"
            android:src="@drawable/image" />

        <!-- Button to select image with outline style -->
        <Button
            android:id="@+id/btnChangeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/blue"
            android:text="Change Image"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- Day of the week -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Day of the week *"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etDayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edit_text_background"
            android:hint="Monday, Tuesday, etc ..."
            android:padding="10dp"
            android:textSize="14sp" />

        <!-- Time of course -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Time of course *"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etTimeOfCourse"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edit_text_background"
            android:hint="10:00 - 11:00"
            android:padding="10dp"
            android:textSize="14sp" />

        <!-- Capacity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Capacity *"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etCapacity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edit_text_background"
            android:hint="10 persons"
            android:padding="10dp"
            android:textSize="14sp" />

        <!-- Duration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Duration *"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edit_text_background"
            android:hint="60 minutes"
            android:padding="10dp"
            android:textSize="14sp" />

        <!-- Price -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Price per class *"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edit_text_background"
            android:hint="10$"
            android:padding="10dp"
            android:textSize="14sp" />

        <!-- Type of class -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Type of Course *"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etTypeOfClass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edit_text_background"
            android:hint="Type of course (Flow, Aerial, etc)"
            android:padding="10dp"
            android:textSize="14sp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Opt."
            android:padding="12dp"
            android:textSize="14sp" />


    </LinearLayout>
</ScrollView>
